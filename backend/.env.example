# SpoonOS AI Configuration
# Copy this file to .env and fill in your API keys

# ===========================================
# LLM Provider API Keys (at least one required)
# ===========================================

# Google Gemini (Recommended for getting started - free tier available)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenRouter (Access multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ===========================================
# LLM Settings
# ===========================================

# Default provider: gemini, openai, anthropic, deepseek, openrouter
DEFAULT_LLM_PROVIDER=gemini

# Default model (examples: gemini-2.5-pro, gpt-4, claude-3-opus)
DEFAULT_MODEL=gemini-2.5-pro

# Max tokens for responses
GEMINI_MAX_TOKENS=20000

# ===========================================
# Web3 Configuration (Optional - for blockchain features)
# ===========================================

# Infura/Alchemy endpoint for Neo or other chains
WEB3_PROVIDER_URL=your_web3_provider_url

# Private key for transactions (KEEP SECRET!)
PRIVATE_KEY=your_private_key_here

# ===========================================
# Neo / NeoFS Configuration
# ===========================================

# Neo RPC endpoint (TestNet by default)
NEO_RPC_URL=https://n3seed2.ngd.network:20332

# Network magic for Neo N3 TestNet
NEO_NETWORK_MAGIC=894710606

# Escrow contract script hash (set after deployment)
NEO_ESCROW_CONTRACT_HASH=

# Backend oracle wallet (WIF) that finalizes bets
NEO_ORACLE_WIF=

# NeoFS gateway and credentials for storing dispute proofs
NEOFS_GATEWAY_URL=
NEOFS_CONTAINER_ID=
NEOFS_WALLET_WIF=

# ===========================================
# Server Configuration
# ===========================================

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173
