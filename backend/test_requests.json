{
  "status_check": {
    "endpoint": "GET /api/spoon/status",
    "description": "Check if the SpoonOS agent is properly configured",
    "url": "http://localhost:8000/api/spoon/status",
    "method": "GET",
    "headers": {
      "Content-Type": "application/json"
    },
    "expected_response": {
      "status": "ready",
      "provider": "gemini",
      "model": "gemini-2.5-pro",
      "message": "SpoonOS agent is configured and ready"
    }
  },
  "analyze_dispute_basic": {
    "endpoint": "POST /api/spoon/analyze",
    "description": "Basic dispute analysis with minimal evidence",
    "url": "http://localhost:8000/api/spoon/analyze",
    "method": "POST",
    "headers": {
      "Content-Type": "application/json"
    },
    "body": {
      "dispute_id": "dispute_test_001",
      "title": "Delivery Delay Dispute",
      "description": "The creator claims the delivery was delayed by 2 weeks, while the opponent states it was delivered on time according to the tracking information.",
      "creator_evidence": [
        {
          "id": "evid_001",
          "type": "text",
          "content": "I ordered the package on January 1st with promised delivery on January 5th, but it didn't arrive until January 19th.",
          "submitted_by": "creator"
        }
      ],
      "opponent_evidence": [
        {
          "id": "evid_002",
          "type": "link",
          "content": "https://tracking.example.com/package/12345",
          "submitted_by": "opponent"
        }
      ],
      "stake_amount": 100.0
    }
  },
